{
  "name": "@loopback/grpc",
  "version": "0.1.1",
  "description": "A gRPC extension for LoopBack Next",
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean loopback-grpc*.tgz dist package api-docs *.tsbuildinfo",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint:fix && npm run clean && npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "lb-prettier \"**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strongloop/loopback4-extension-grpc.git"
  },
  "author": "IBM Corp.",
  "contributors": [
    {
      "name": "Jonathan Casarrubias",
      "email": "jcasarrubias@mean.expert",
      "url": "https://github.com/mean-expert-official"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strongloop/loopback4-extension-grpc/issues"
  },
  "homepage": "https://github.com/strongloop/loopback4-extension-grpc#readme",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "compilers",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/context": "^1.21.4",
    "@loopback/core": "^1.9.3",
    "@loopback/metadata": "^1.2.10",
    "@loopback/repository": "^1.12.0",
    "@loopback/rest": "^1.17.0",
    "@mean-expert/protoc-ts": "0.0.2",
    "glob": "^7.1.4",
    "grpc": "^1.23.3",
    "protobufjs": "^6.8.8"
  },
  "devDependencies": {
    "@loopback/build": "^2.0.8",
    "@loopback/eslint-config": "^4.0.1",
    "@loopback/testlab": "^1.7.4",
    "@types/glob": "^7.1.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.1.0"
  }
}
